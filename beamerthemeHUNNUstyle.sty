\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamerthemeHUNNUstyle}[2020/12/19 v0.0.1 The HUNNUstyle Beamer Theme]
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Load required packages
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\RequirePackage{tikz}
\usetikzlibrary{external}
\RequirePackage{calc}
\RequirePackage{graphicx}
\RequirePackage{subfig}
\RequirePackage{caption}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Theme options and definitions
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%%theme options
\DeclareOptionBeamer{width}{\PassOptionsToPackage{width=#1}{beamerouterthemeHUNNUstyle}}
\DeclareOptionBeamer{hideothersubsections}{\PassOptionsToPackage{hideothersubsections}{beamerouterthemeHUNNUstyle}}
\DeclareOptionBeamer{hideallsubsections}{\PassOptionsToPackage{hideallsubsections}{beamerouterthemeHUNNUstyle}}
\DeclareOptionBeamer{hidetitle}{\PassOptionsToPackage{hidetitle}{beamerouterthemeHUNNUstyle}}
\DeclareOptionBeamer{hideauthor}{\PassOptionsToPackage{hideauthor}{beamerouterthemeHUNNUstyle}}
\DeclareOptionBeamer{hideinstitute}{\PassOptionsToPackage{hideinstitute}{beamerouterthemeHUNNUstyle}}
\DeclareOptionBeamer{shownavsym}{\PassOptionsToPackage{shownavsym}{beamerouterthemeHUNNUstyle}}

\DeclareOptionBeamer{hunnured}{%
  \PassOptionsToPackage{hunnured}{beamercolorthemeHUNNUstyle}%
  \PassOptionsToPackage{hunnured}{beamerinnerthemeHUNNUstyle}%
  \PassOptionsToPackage{hunnured}{beamerouterthemeHUNNUstyle}%
  }
\DeclareOptionBeamer{hunnublue}{%
  \PassOptionsToPackage{hunnublue}{beamercolorthemeHUNNUstyle}%
  \PassOptionsToPackage{hunnublue}{beamerinnerthemeHUNNUstyle}%
  \PassOptionsToPackage{hunnublue}{beamerouterthemeHUNNUstyle}%
  }
\DeclareOptionBeamer{english}{%
  \PassOptionsToPackage{english}{beamerinnerthemeHUNNUstyle}%
  }
\DeclareOptionBeamer{sidebar}{%
  \PassOptionsToPackage{sidebar}{beamercolorthemeHUNNUstyle}%
  \PassOptionsToPackage{sidebar}{beamerinnerthemeHUNNUstyle}%
  \PassOptionsToPackage{sidebar}{beamerouterthemeHUNNUstyle}%
  }
\ProcessOptionsBeamer

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%beamer specific options
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\mode<presentation>%refers to the first four modes (beamer,handout,second and trans). That is, to all modes except the article mode
{
  \useinnertheme{HUNNUstyle}
  \useoutertheme{HUNNUstyle}
  \usecolortheme{HUNNUstyle}
  \usefonttheme{HUNNUstyle}
}%end of beamer specific options

\mode<all>
